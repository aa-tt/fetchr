<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:gravity="center_vertical">

    <TextView
        android:id="@+id/bin_scan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#01161d"
        android:lineSpacingExtra="5sp"
        android:text="Bin:"
        android:padding="10dp"
        />

        <TextView
            android:id="@+id/bin_scan_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#de1b1b1c"
            android:lineSpacingExtra="5sp"
            tools:text="A1-R1-S2-005"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bin_scan_name_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#de1b1b1c"
            android:lineSpacingExtra="5sp"
            tools:text="A1-R1-S2-005"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_4"
            />

        <View
            android:id="@+id/view_bin_tray_scan"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d8dde6"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/margin_50"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tray_scan_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#01161d"
            android:lineSpacingExtra="5sp"
            android:text="@string/tray"
            android:padding="10dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tray_scan_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#de1b1b1c"
            android:lineSpacingExtra="5sp"
            tools:text="Tray_001"
            android:textStyle="bold"
            android:visibility="gone"/>

    </LinearLayout>
</LinearLayout>