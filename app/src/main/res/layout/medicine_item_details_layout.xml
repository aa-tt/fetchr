<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="6dp"
    android:layout_margin="2dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/item_name_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_8"
            >

            <TextView
                android:id="@+id/medicine_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/txt_16"
                android:fontFamily="sans-serif-medium"
                android:text="TAZLOC H 80MG TAB 10â€™s"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/medicine_batch_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#54698d"
                    android:textSize="@dimen/txt_13"
                    android:text="BATCH : "/>

                <TextView
                    android:id="@+id/medicine_batch_no_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#54698d"
                    android:textSize="@dimen/txt_13"
                    tools:text="1234567"
                    android:layout_marginEnd="@dimen/margin_10"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/margin_10"
                    android:background="#d8dde6"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_10"/>

                <TextView
                    android:id="@+id/item_mrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MRP : "
                    android:textSize="@dimen/txt_13"
                    android:textColor="#54698d"
                    android:layout_marginStart="@dimen/margin_10"/>

                <TextView
                    android:id="@+id/value_mrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="100.0"
                    android:textSize="@dimen/txt_13"
                    android:textColor="#54698d"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:background="@color/list_bg"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@+id/item_name_linear"/>

        <LinearLayout
            android:id="@+id/item_detail_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottomradius"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:weightSum="3">




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_packform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="@string/scanned_items"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="@dimen/txt_14"
                    android:textColor="@color/txt_color"/>

                <TextView
                    android:id="@+id/value_scanned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="9"
                    android:textSize="@dimen/txt_64"
                    android:textColor="#01161d"
                    android:fontFamily="sans-serif-medium"
                    />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="110dp"
                android:background="#d8dde6"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_issues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="@string/issue_items"
                    android:textSize="@dimen/txt_14"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/txt_color"/>

                <TextView
                    android:id="@+id/value_issues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="0"
                    android:textSize="@dimen/txt_64"
                    android:textColor="#c23934"
                    android:fontFamily="sans-serif-medium"
                    />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="110dp"
                android:background="#d8dde6"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="@string/pending"
                    android:textSize="@dimen/txt_14"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/txt_color"/>

                <TextView
                    android:id="@+id/value_pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="1"
                    android:textSize="@dimen/txt_64"
                    android:textColor="#01161d"
                    android:fontFamily="sans-serif-medium"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
